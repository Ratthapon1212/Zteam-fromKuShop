<form asp-controller="Home" asp-action="Shop">
    <br />
    <div class="row">
        <div class="col-sm-6 col-md-8 col-lg-9">

        </div>
        <div class="col-sm-6 col-md-4 col-lg-3">
            <div class="input-group">
                <form class="d-flex m-2 me-3">
                    <input class="form-control me-sm-2 " type="search" placeholder="ค้นหา">
                    <button class="btn btn-secondary my-2 my-sm-0" type="submit"><i class="bi bi-search"></i></button>
                </form>
            </div>
        </div>
    </div>
</form>

@{
